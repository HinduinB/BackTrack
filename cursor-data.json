{
  "layout": {
    "header": {
      "position": "top",
      "height": "48px",
      "padding": "12px 16px",
      "background": "#1E1F24",
      "borderBottom": "1px solid #2A2C32",
      "content": {
        "statusIndicator": "BackTrack Enabled or Disabled",
        "font": {
          "family": "Inter, Segoe UI, Helvetica Neue, sans-serif",
          "size": "13px",
          "weight": 500,
          "color": "#FFFFFF"
        },
        "icon": {
          "colorEnabled": "#00D67F",
          "colorDisabled": "#FF4C4C"
        }
      }
    },

    "mainContent": {
      "position": "below-header",
      "tabs": {
        "type": "horizontal",
        "items": ["Console", "Network", "Settings"],
        "activeTabHighlight": true,
        "spacing": "8px",
        "padding": "8px 12px",
        "tabItem": {
          "default": {
            "textColor": "#C5C5D2",
            "background": "transparent"
          },
          "hover": {
            "textColor": "#FFFFFF",
            "background": "#2A2B30"
          },
          "active": {
            "textColor": "#FFFFFF",
            "background": "#2C2D34"
          },
          "borderRadius": "6px",
          "fontSize": "13px",
          "fontWeight": 500
        }
      },

      "table": {
        "position": "below-tabs",
        "columns": ["URL", "Method", "Status", "Time"],
        "header": {
          "background": "#1E1F24",
          "textColor": "#A0A0B0",
          "fontSize": "13px",
          "fontWeight": 600,
          "borderBottom": "1px solid #2A2C32"
        },
        "rows": {
          "background": "#1E1F24",
          "textColor": "#FFFFFF",
          "hoverBackground": "#2C2D34",
          "fontSize": "13px",
          "borderBottom": "1px solid #2A2C32",
          "padding": "6px 8px"
        }
      }
    },

    "exportSection": {
      "position": "bottom-of-mainContent",
      "marginTop": "12px",
      "button": {
        "label": "Export as",
        "icon": "â–¼",
        "background": "#2A2C32",
        "textColor": "#C5C5D2",
        "hoverBackground": "#34363E",
        "borderRadius": "6px",
        "padding": "8px 12px"
      },
      "dropdownOptions": {
        "Option 1": "Export as JSON",
        "Option 2": "Export as HAR",
        "textColor": "#FFFFFF",
        "hoverBackground": "#3A3D44",
        "borderBottom": "1px solid #2F3138"
      }
    }
  },

  "elementStyling": {
    "cards": {
      "background": "linear-gradient(135deg, #2A2C32 0%, #1E1F24 100%)",
      "border": "#2F3138",
      "borderRadius": "12px",
      "shadow": "0 4px 12px rgba(0,0,0,0.25)",
      "icons": {
        "fill": "#FFFFFF",
        "background": "none"
      }
    },
    "buttons": {
      "primary": {
        "background": "#2F82FF",
        "text": "#FFFFFF",
        "hover": {
          "background": "#1C66E0"
        },
        "pressed": {
          "background": "#174CBF"
        },
        "disabled": {
          "background": "#3C3C46",
          "text": "#888888"
        }
      }
    },
    "font": {
      "family": "Inter, Segoe UI, Helvetica Neue, sans-serif",
      "baseSize": "13px",
      "weight": {
        "regular": 400,
        "medium": 500,
        "bold": 600
      },
      "lineHeight": "1.5"
    }
  },

  "visualEffects": {
    "shadows": {
      "cards": "0 4px 12px rgba(0, 0, 0, 0.25)"
    },
    "gradients": {
      "cardContainers": "linear-gradient(135deg, #2A2C32 0%, #1E1F24 100%)"
    },
    "borderRadius": {
      "cards": "12px",
      "buttons": "8px",
      "tabItems": "6px",
      "dropdowns": "6px"
    }
  },

  "componentStates": {
    "buttons": {
      "hover": {
        "backgroundDarken": "7%"
      },
      "pressed": {
        "scale": "0.98"
      },
      "focus": {
        "outline": "2px solid #2F82FF"
      },
      "disabled": {
        "opacity": 0.5,
        "cursor": "not-allowed"
      }
    }
  },

  "doNotRules": {
    "doNotApplyCardGradientTo": ["icons", "buttons", "text"],
    "doNotUseButtonBackgroundOn": ["text", "icon fills"],
    "doNotApplyShadowTo": ["text labels", "icons", "inline content"],
    "doNotUseHeaderBackgroundOn": ["cards", "modals", "popups"],
    "doNotReplaceStatusIndicatorColor": "Use only #00D67F or #FF4C4C"
  }
}
